<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/small"
    android:layout_margin="@dimen/small"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/place_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:gravity="center_vertical"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingLeft="4dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingRight="4dp"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />

        <TextView
            android:id="@+id/place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
            android:layout_marginRight="@dimen/small"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />

        <TextView
            android:id="@+id/place_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
            android:layout_marginRight="@dimen/small"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
            android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
            android:layout_gravity="center_vertical|start"
            android:layout_marginRight="4dp"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/rating"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/phone"
        android:contentDescription="@string/action_call"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_phone"
        android:layout_gravity="center"
        android:layout_marginLeft="?android:attr/listPreferredItemHeightSmall"
        android:layout_marginStart="?android:attr/listPreferredItemHeightSmall"
        android:layout_marginEnd="?android:attr/listPreferredItemHeightSmall"
        android:layout_marginRight="?android:attr/listPreferredItemHeightSmall"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>